{
  "name": "connector",
  "version": "0.1.1",
  "description": "ðŸ“¡ Client for seamless integration with crypto exchanges.",
  "author": "dephix",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build api && nest build catalog && nest build marketdata && nest build analysis",
    "start": "nest start api",
    "start:dev": "nest start --watch api",
    "start:api": "nest start api",
    "start:api:dev": "nest start --watch api",
    "start:catalog": "nest start catalog",
    "start:catalog:dev": "nest start --watch catalog",
    "start:marketdata": "nest start marketdata",
    "start:marketdata:dev": "nest start --watch marketdata",
    "start:analysis": "nest start analysis",
    "start:analysis:dev": "nest start --watch analysis",
    "start:all": "concurrently -n api,catalog,marketdata,analysis -c blue,magenta,cyan,green \"nest start --watch api\" \"nest start --watch catalog\" \"nest start --watch marketdata\" \"nest start --watch analysis\"",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --coverageReporters=text-summary --coverageReporters=lcov",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "compose:up": "docker compose -f ops/docker-compose.yml up -d",
    "compose:down": "docker compose -f ops/docker-compose.yml down -v"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/microservices": "^11.0.1",
    "nats": "^2.25.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "prom-client": "^15.1.3",
    "nestjs-pino": "^4.2.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.55.0",
    "@opentelemetry/auto-instrumentations-node": "^0.55.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.55.0",
    "@opentelemetry/resources": "^1.9.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "dotenv": "^16.4.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "moduleNameMapper": {
      "^@connector/config$": "<rootDir>/libs/config/src",
      "^@connector/observability$": "<rootDir>/libs/observability/src",
      "^@connector/contracts$": "<rootDir>/libs/contracts/src",
      "^@connector/(.*)$": "<rootDir>/libs/$1/src"
    },
    "coverageThreshold": {
      "global": {
        "branches": 35,
        "functions": 35,
        "lines": 40,
        "statements": 40
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s",
      "libs/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
