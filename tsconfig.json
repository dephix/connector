{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@connector/contracts": ["libs/contracts/src"],
      "@connector/contracts/*": ["libs/contracts/src/*"],
      "@connector/observability": ["libs/observability/src"],
      "@connector/config": ["libs/config/src"],
      "@connector/catalog/*": ["libs/catalog/*/src"],
      "@connector/marketdata/*": ["libs/marketdata/*/src"],
      "@connector/analysis/*": ["libs/analysis/*/src"]
    }
  }
}
